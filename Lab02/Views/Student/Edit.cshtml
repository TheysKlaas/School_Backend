@model School_Webapp.ViewModels.StudentEducationVm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.EducationId" class="control-label"></label>
                <select asp-for="Student.EducationId" class="form-control" asp-items="@Model.Education"></select>
                <span asp-validation-for="Student.EducationId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.Birthday" class="control-label"></label>
                <input asp-for="Student.Birthday" class="form-control" />
                <span asp-validation-for="Student.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Password" class="control-label"></label>
                <input asp-for="Student.Password" class="form-control" />
                <span asp-validation-for="Student.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Gender" class="control-label"></label>
                <select asp-for="Student.Gender" asp-items="Html.GetEnumSelectList<Person.GenderType>()">
                    <option>-- Kies een geslacht --</option>
                </select>
                <span asp-validation-for="Student.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
